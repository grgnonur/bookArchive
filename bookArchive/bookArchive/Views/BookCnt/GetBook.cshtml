@model bookArchive.Models.Book
@{
    ViewData["Title"] = "GetBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

@using (Html.BeginForm("Update", "BookCnt", FormMethod.Post))
{
    
<div class="form-group">
    <b>Kitap İsmi</b>
    @Html.TextBoxFor(x => x.bookName, new { @class = "form-control" })
    <b>Kitap Yazarı</b>
    @Html.TextBoxFor(x => x.author, new { @class = "form-control" })
    <b>Kitap Kategorisi</b>
    @Html.DropDownListFor(x => x.Category.id, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    <b>Kitap Özeti</b>
    @Html.TextBoxFor(x => x.description, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</div>
}

